# .editorconfig for live-unite-tools
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_size = 4
indent_style = space
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.cmake]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true
end_of_line = lf
charset = utf-8

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.ini]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8

[*.html]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true
charset = utf-8
